{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
  ],
  "gomod": {
    "packageRules": [
      {
        "matchManagers": [
          "gomod"
        ],
        "matchDepTypes": [
          "indirect"
        ],
        "enabled": true,
        "separateMajorMinor": false,
        "groupName": "all dependencies"
      }
    ]
  },
  "automerge": false
}
